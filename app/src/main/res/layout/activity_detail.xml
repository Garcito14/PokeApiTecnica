<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.view.DetailActivity">

    <ProgressBar
        android:id="@+id/pbDetail"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintTop_toTopOf="parent"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:visibility="visible"

        />
    <ImageButton
        android:id="@+id/ivPokemon"
        android:layout_marginTop="30dp"
        android:layout_width="0dp"
        android:background="@color/white"
        android:layout_height="250dp"
        android:scaleType="fitCenter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="340dp"
        android:layout_marginBottom="-30dp"
        android:backgroundTint="@color/pokeon_item_name"
        android:elevation="10dp"
        app:cardCornerRadius="42dp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">



        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="707dp"
            android:orientation="vertical">


            <Button
                android:id="@+id/btnShiny"
                android:layout_width="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_height="wrap_content"
            android:text="Shiny"
                />
            <TextView
                android:id="@+id/tvPokemonName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:textAllCaps="true"
                android:textSize="28sp"
                tools:text="NOMBRE"

                />

            <TextView
                android:id="@+id/tvHeight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:textSize="28sp"
                tools:text="ALTURA"

                />

            <TextView
                android:id="@+id/tvWeight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:textSize="28sp"
                tools:text="PESO"

                />
            <TextView
                android:id="@+id/tvDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:textSize="28sp"
                tools:text="DESCRIPCION"

                />

            <TextView
                android:id="@+id/tvBaseStat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:textSize="28sp"
                tools:text="STAT"

                />




        </androidx.appcompat.widget.LinearLayoutCompat>
        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/linearLY"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="200dp"
            android:gravity="bottom"
            android:orientation="horizontal"

            >

            <View
                android:id="@+id/viewHP"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_marginHorizontal="4dp"
                android:layout_weight="1"
                android:background="@color/black"
                android:backgroundTint="@color/inte">


            </View>

            <View
                android:id="@+id/viewAttack"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_marginHorizontal="4dp"
                android:layout_weight="1"
                android:background="@color/black"
                android:backgroundTint="@color/str">


            </View>

            <View
                android:id="@+id/viewDefense"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_marginHorizontal="4dp"
                android:layout_weight="1"
                android:background="@color/black"
                android:backgroundTint="@color/spd">


            </View>

            <View
                android:id="@+id/viewSPA"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_marginHorizontal="4dp"
                android:layout_weight="1"
                android:background="@color/black"
                android:backgroundTint="@color/dur">


            </View>

            <View
                android:id="@+id/viewSPD"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_marginHorizontal="4dp"
                android:layout_weight="1"
                android:background="@color/black"
                android:backgroundTint="@color/power">


            </View>

            <View
                android:id="@+id/viewSpeed"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_marginHorizontal="4dp"
                android:layout_weight="1"
                android:background="@color/black"
                android:backgroundTint="@color/combat">


            </View>
        </androidx.appcompat.widget.LinearLayoutCompat>


        <androidx.appcompat.widget.LinearLayoutCompat

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="300dp"

            android:gravity="bottom"
            android:orientation="horizontal"
            >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="4dp"

                android:layout_weight="1"
                android:text="HP">


            </TextView>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="4dp"

                android:layout_weight="1"
                android:text="Attack">


            </TextView>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="4dp"

                android:layout_weight="1"
                android:text="Defense">


            </TextView>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="4dp"

                android:layout_weight="1"
                android:text="Special Attack">


            </TextView>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="4dp"

                android:layout_weight="1"
                android:text="Special Defense">


            </TextView>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="4dp"

                android:layout_weight="1"
                android:text="Speed">


            </TextView>


        </androidx.appcompat.widget.LinearLayoutCompat>

    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>